{
    "name": "tool name",
    "description": "tool description",
    "tool-version": "v0.1.0",
    "schema-version": "0.5",
    "command-line": "[[NIPOPPY_CONTAINER_COMMAND]] [[NIPOPPY_FPATH_CONTAINER]] [INCLUSION_IDS] [EXCLUSION_IDS] [PLUGIN] [LOCAL_THREADS] [SCALE_MIN_MEMORY] [MIN_PROC] [FIGURE_FORMAT] [VERBOSE] [FORCE]",
    "inputs": [
        {
            "id": "inclusion_ids",
            "name": "inclusion_ids",
            "description": "Define a list of BOLD scan to include",
            "optional": true,
            "type": "String",
            "command-line-flag": "--inclusion_ids",
            "value-key": "[INCLUSION_IDS]",
            "default-value": "['all']"
        },
        {
            "id": "exclusion_ids",
            "name": "exclusion_ids",
            "description": "This argument provides a list of scans to exclude",
            "optional": true,
            "type": "String",
            "command-line-flag": "--exclusion_ids",
            "value-key": "[EXCLUSION_IDS]",
            "default-value": "['none']"
        },
        {
            "id": "plugin",
            "name": "plugin",
            "description": "Specify the nipype plugin for workflow execution.",
            "optional": true,
            "type": "String",
            "command-line-flag": "-p",
            "value-key": "[EXCLUSION_IDS]",
            "default-value": "linear"
        },
        
        {
            "id": "bids_dir",
            "name": "bids_dir",
            "description": "The root folder of a BIDS valid dataset (sub-XXXXX folders should be found at the top level in this folder).",
            "optional": false,
            "type": "String",
            "value-key": "[BIDS_DIR]",
            "default-value": "[[NIPOPPY_DPATH_BIDS]]"
        },
        {
            "id": "output_dir",
            "name": "output_dir",
            "description": "The directory where the output files created by RABIES should be stored.",
            "optional": false,
            "type": "String",
            "value-key": "[OUTPUT_DIR]",
            "default-value": "[[NIPOPPY_DPATH_PIPELINE_OUTPUT]]"
        }
    ],
    "output-files": [
        {
            "name": "The first output",
            "id": "basic_output1",
            "optional": false,
            "path-template": "[PARAM2].txt",
            "path-template-stripped-extensions": [
                ".log"
            ],
            "value-key": "[OUTPUT1]"
        }
    ],
   
    "tags": {
    },
    "suggested-resources": {
        "cpu-cores": 1,
        "ram": 1,
        "walltime-estimate": 60
    },
    "error-codes": [
        {
            "code": 1,
            "description": "Crashed"
        }
    ]
}